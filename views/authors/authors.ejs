<section>
    <h1 class="text-3xl text-white text-wrap text-center font-bold">Search Authors</h1>
    <form action="/authors" method="GET" class="flex items-center py-3 rounded-lg justify-around mx-2 bg-violet-500">
        <div class="search flex items-center justify-around gap-3">
            <label for="search" class="inline ">Name </label>
            <!-- background-image: linear-gradient(to right top, #6b7ad1, #6f83d6, #738cda, #7995dd, #7f9ee1, #7e9fe5, #7c9fe9, #7ba0ed, #7299f1, #6a91f5, #6489f8, #5f81fb); -->
            <input type="text" name="SearchTerm" class="text-black px-2 py-1 rounded-md bg-gradient-to-rt from-[#6b7ad1] via-[#6f83d6] via-[#738cda] via-[#7995dd] via-[#7f9ee1] via-[#7e9fe5] via-[#7c9fe9] via-[#7ba0ed] via-[#7299f1] via-[#6a91f5] via-[#6489f8] to-[#5f81fb]">
        </div>
        <button type="submit" class="inline-block px-2 text-white font-bolder shadow-md py-1 bg-blue-400 rounded-lg">Search</button>
    </form>
</section>

<section>
    <% authors.forEach(author => {%>
        <div class="rows flex mt-5 py-3 items-center rounded-md justify-between w-[90vh] m-auto px-9 bg-gradient-to-t from-[#6b7ad1] via-[#6f83d6] via-[#738cda] via-[#7995dd] via-[#7f9ee1] via-[#7e9fe5] via-[#7c9fe9] via-[#7ba0ed] via-[#7299f1] via-[#6a91f5] via-[#6489f8] to-[#5f81fb]">
            <h1 class="text-xl font-bold text-white capitalize"><%-author.name %></h1>
            <div class="btns flex gap-4">
                <a href="/authors/<%-author.id %>" class="text-white bg-[#01539D] shadow-2xl px-2 py-1 rounded-md">View</a>
                <a href="/authors/<%-author.id %>/edit" class="text-white bg-[#EEA47F] shadow-2xl px-2 py-1 rounded-md">Edit</a>
                <form action="/authors/<%-author.id %>?_method=DELETE" method="POST">
                    <button type="submit" class="text-white bg-[#101920] shadow-2xl px-2 py-1 rounded-md">Delete</button>
                </form>
            </div>
        </div>
    <%}); %>
</section>
